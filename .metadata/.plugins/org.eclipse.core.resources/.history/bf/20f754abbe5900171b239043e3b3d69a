<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
	<title>Gerenciar Funcionários</title>
	
	<!-- Bootstrap Core CSS -->
	<link rel="stylesheet" type="text/css" href="../../lib/bower_components/bootstrap/dist/css/bootstrap.min.css">
	<!-- w2ui CSS -->
	<link rel="stylesheet" type="text/css" href="../../lib/bower_components/w2ui/w2ui-1.5.rc1.min.css">
	
	<!-- jQuery -->
	<script type="text/javascript" src="../../lib/bower_components/jquery/dist/jquery.min.js"></script>	
	<!-- Bootstrap Core JS -->
	<script type="text/javascript" src="../../lib/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
	<!-- w2ui JS -->
	<script type="text/javascript" src="../../lib/bower_components/w2ui/w2ui-1.5.rc1.min.js"></script>
	<script type="text/javascript">
		$(function(){
			
			w2utils.locale('../../lib/bower_components/w2ui/locale/pt-br.json');
			
			$('#grid').w2grid({
				name: 'grid',
				url: '',
				header: 'Funcionários',
				show: {
					toolbar: true,
					footer: true,
					toolbarAdd: false,
					toolbarDelete: true
				},
				sortData: [{ field: 'recid', direction: 'ASC' }],
				columns: [
					{ field: 'idfuncionario', caption: 'Cód.', size: '30%' },
					{ field: 'nome', caption: 'Nome', size: '70%' }
                ],
                onClick: function(event) {
                    var grid = this;
                    var form = w2ui.form;
                    event.onComplete = function () {
                        var sel = grid.getSelection();
                        if (sel.length == 1) {
                            form.recid  = sel[0];
                            form.record = $.extend(true, {}, grid.get(sel[0]));
                            form.refresh();
                        } else {
                            form.clear();
                        }
					}
                }
			});
			
			$("#form").w2form({ 
                url: '<?php echo htmlspecialchars($_SERVER["PHP_SELF"]); ?>',
                header: 'Gerenciador de Departamentos',
                name: 'form',
                fields: [
                    { name: 'iddepartamento', type: 'text', html: { caption: 'ID', attr: 'size="10" readonly' } },
                    { name: 'descricao', type: 'text', required: true, html: { caption: 'Descrição', attr: 'size="40" maxlength="40"' } }
                ],
                actions: {
                    Reset: function () {
                        this.clear();
                    },
                    Save: function () {
                        var errors = this.validate();
                        if (errors.length > 0) {
                            return;
                        }
                        this.save();
                    }
                },
                onSave: function(event) {
                    form = this;
                    grid = w2ui.grid;
                    event.onComplete = function(){
                        var response = JSON.parse(event.xhr.responseText);
						form.refresh();
                        if(response.status === 'success'){
							form.clear();
							grid.reload();
                        }
						
                        w2popup.open({
                            title: response.status === 'success' ? 'Sucesso' : 'Erro',
                            body: '<div class="w2ui-centered">' + response.message + '</div>',
                            showMax: true,
                        });
                    } 
				}
            });
        });
       
	</script>
</head>
<body>
	<div class="container">
		<div class="col-xs-6">
			<h3 class="page-header">Gerenciar Funcionários</h3>
			<div class="row">
				<div class="col-md-12">
					<div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Lista de Departamentos</h3>
						</div>					
						<div id="grid" style="width: 100%; height: 250px;"></div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div id="form" style="width: 100%;"></div>
    			</div>
			</div>
		</div>
	</div>
</body>
</html>